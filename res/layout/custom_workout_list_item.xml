<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/sets_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:gravity="right" >
	    
	        <TextView android:id="@+id/exercise_name"
		        android:layout_width="0dp"
		        android:layout_marginTop="10dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/test"
		        android:textSize="20sp"
		        android:textStyle="bold"/>
	        
	        <TextView android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="10sp"
		        android:text="sets"
		        android:textSize="18sp" />
	    
		    <Button
		       	android:id="@+id/remove_set"
		       	android:layout_width="30dp"
		       	android:layout_height="30dp"
		       	android:background="@drawable/minus_icon"
		       	/>
		    
		    <EditText 
		        android:id="@+id/no_of_sets"
		        android:layout_width="60dp"
		       	android:layout_height="40dp"
		       	android:inputType="number"
		        />
		    
		    <Button
		       	android:id="@+id/add_set"
		       	android:layout_width="30dp"
		       	android:layout_height="30dp"
		       	android:background="@drawable/add_icon"
		       	/>    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/reps_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:layout_marginRight="20dp"
	    android:gravity="right" >
		    
		    <TextView android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="10sp"
		        android:text="reps"
		        android:textSize="18sp" />
		    
		    <Button
		       	android:id="@+id/remove_reps"
		       	android:layout_width="30dp"
		       	android:layout_height="30dp"
		       	android:background="@drawable/minus_icon"
		       	/>
		    
		    <EditText 
		        android:id="@+id/no_of_reps"
		        android:layout_width="60dp"
		       	android:layout_height="40dp"
		       	android:inputType="number"
		        />
		    
		    <Button
		       	android:id="@+id/add_reps"
		       	android:layout_width="30dp"
		       	android:layout_height="30dp"
		       	android:background="@drawable/add_icon"
		       	/>    
    </LinearLayout>

</LinearLayout>
