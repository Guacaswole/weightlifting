<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weightlifting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.example.weightlifting.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.weightlifting.WorkoutActivity"
            android:label="@string/workout_activity_title" >
        </activity>
        <activity
            android:name="com.example.weightlifting.SetViewActivity"
            android:label="@string/title_activity_set_view" >
        </activity>
                <activity
            android:name="com.example.weightlifting.WODActivity"
            android:label="@string/title_activity_wod" >
        </activity>
        <activity
            android:name="com.example.weightlifting.WODListActivity"
            android:label="@string/title_activity_wod_list" 
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.weightlifting.CreateAWorkoutActivity"
            android:label="@string/title_activity_create_a_workout" 
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.weightlifting.CustomWorkoutActivity"
            android:label="@string/title_activity_custom_workout" 
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>
